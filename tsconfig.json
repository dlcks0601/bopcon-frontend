{
  "compilerOptions": {
    "types": ["vitest", "node"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true, // 타입 정의 충돌 무시
    "moduleResolution": "node",
    "target": "es6",
    "module": "esnext",
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"], // 모든 src 디렉토리 파일 포함
  "exclude": ["node_modules"],
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
